#accordion.panel-group{"aria-multiselectable" => "true", :role => "tablist"}
  .panel.panel-default
    #headingOne.panel-heading{:role => "tab"}
      %h4.panel-title
        %a{"aria-controls" => "collapseOne", "aria-expanded" => "true", "data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseOne"}
          Datos Básicos
    #collapseOne.panel-collapse.collapse.in{"aria-labelledby" => "headingOne", :role => "tabpanel"}
      .panel-body
        = form_for @project, multipart: true do |f|
          - if @project.errors.any?
            #error_explanation
              %h2= "#{pluralize(@project.errors.count, "error")} prohibieron guardar este proyecto:"
              %ul
                - @project.errors.full_messages.each do |msg|
                  %li= msg

          .form-group
            .field
              = f.label :Nombre
              = f.text_field :name, placeholder: "Nombre", class: "form-control input-lg"

            .row.large-12.columns
              %form.form-horizontal
                .form-group.col-md-4
                  %label{:for => ""} Cartera
                  %p#cartera.form-control.input-lg=f.select :portfolio_id, Portfolio.all.map { |p| [p.name, p.id ] }, class: "form-control"
                .form-group.col-md-4
                  %label{:for => ""} Zona Metropolitana
                  %p#zona.form-control.input-lg=f.select :category_id, Category.all.map { |c| [c.name, c.id ] }, class: "form-control"
                .field.col-md-4
                  =f.label :Ubicación
                  =f.text_field :location, placeholder: "Ubicación", class: "form-control input-lg"

            .row.large-12.columns
              .field.col-md-6
                =f.label :Contratado
                =f.text_field :price, placeholder: "Monto Contratado", class: "form-control input-lg"
              .field.col-md-6
                =f.label :Autorización
                =f.text_field :auth_number, placeholder: "Oficio de Autorización", class: "form-control input-lg"

            .row.large-6.columns
              %form.form-horizontal
              .form-group.col-md-3
                %label{:for => ""} Fecha inicio:
                =f.date_field :start_date

              .form-group.col-md-3
                %label{:for => ""} Fecha Fin:
                =f.date_field :end_date

            .row
              %h5.col-md-3=f.text_field :auth_number, placeholder: "Oficio de Aut.", label: "Oficio Autorización", class: "form-control input-lg"
              %h5.col-md-3=f.text_field :price, placeholder: "Solicitado", class: "form-control input-lg"

            .row.large-6.columns
              .form-group.col-md-3
                %label{:for => ""} Meta Programada
                =f.text_field :target_set, placeholder: "Meta Programada", class: "form-control input-lg"
              .form-group.col-md-3
                %label{:for => ""} Unidad de Medida
                %p#unidad.form-control.input-lg=f.select :unit_id, Unit.all.map { |u| [u.name, u.id ] }, class: "form-control input-lg "

            .field
              = f.label :imagen
              = f.file_field :image

